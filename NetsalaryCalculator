gross_salary = parseInt(basic_salary) + parseInt(NHIF_Deductions) + parseInt(NSSF_Deductions)
+parseInt(PAYE);
 const Net_income =gross_salary - PAYE - NHIF_Deductions -NSSF_Deductions;

